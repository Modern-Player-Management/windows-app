<ContentDialog
    x:Class="ModernPlayerManager.Dialogs.EditUserProfileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernPlayerManager.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Edit User Profile"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel">

    <StackPanel>
        <TextBox Text="{x:Bind ViewModel.UserProfile.Username, Mode=TwoWay}" PlaceholderText="Username..." Header="Username" ></TextBox>
        <TextBox Text="{x:Bind ViewModel.UserProfile.Email, Mode=TwoWay}" PlaceholderText="Email..." Header="Email"></TextBox>
    </StackPanel>
</ContentDialog>
